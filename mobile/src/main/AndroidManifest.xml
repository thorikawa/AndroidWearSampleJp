<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.polysfactory.androidwearsamplejp" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".MyActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".NotificationActivity"
            android:label="@string/title_activity_notification" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NotificationLandingActivity"
            android:label="@string/title_activity_notification_landing" />
        <activity
            android:name=".VoiceReplyActivity"
            android:label="@string/title_activity_voice_reply" >
        </activity>
    </application>

</manifest>
